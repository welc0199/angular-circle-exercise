{
  "extends": [
      "tslint-eslint-rules"
  ],
  "rules": {
      "class-name": true,
      "component-class-suffix": [
          true,
          "Component"
      ],
      "component-selector": [
          true,
          "element",
          "",
          "kebab-case"
      ],
      "curly": true,
      "directive-class-suffix": [
          true,
          "Directive"
      ],
      "directive-selector": [
          true,
          "attribute",
          "",
          "camelCase"
      ],
      "eofline": false,
      "file-header": [
          true,
          "Copyright (c) Microsoft Corporation"
      ],
      "forin": true,
      "import-destructuring-spacing": true,
      "invoke-injectable": true,
      "label-position": true,
      "max-file-line-count": [
          true,
          1337
      ],
      "max-line-length": [
          true,
          140
      ],
      "no-access-missing-member": true,
      "no-arg": true,
      "no-attribute-parameter-decorator": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": true,
      "no-console": [
          true,
          "log",
          "debug",
          "info",
          "time",
          "timeEnd",
          "trace"
      ],
      "no-construct": true,
      "no-debugger": true,
      "no-duplicate-variable": true,
      "no-unused-variable": true,
      "no-empty": false,
      "no-eval": true,
      "no-forward-ref": true,
      "no-input-rename": false,
      "no-irregular-whitespace": true,
      "no-output-rename": true,
      "no-string-literal": false,
      "no-trailing-whitespace": true,
      "no-unused-expression": true,
      "no-use-before-declare": true,
      "no-var-keyword": true,
      "object-literal-key-quotes": [
          true,
          "as-needed"
      ],
      "one-line": [
          true,
          "check-open-brace",
          "check-catch",
          "check-else",
          "check-whitespace"
      ],
      "one-variable-per-declaration": [
          true,
          "ignore-for-loop"
      ],
      "quotemark": [
          true,
          "single",
          "avoid-escape"
      ],
      "radix": true,
      "semicolon": true,
      "templates-use-public": true,
      "ter-indent": [
          true,
          4,
          {
              "SwitchCase": 1
          }
      ],
      "trailing-comma": [
          true,
          {
              "multiline": "always",
              "singleline": "never"
          }
      ],
      "triple-equals": [
          true,
          "allow-null-check"
      ],
      "typeof-compare": true,
      "use-host-property-decorator": true,
      "use-input-property-decorator": true,
      "use-isnan": true,
      "use-life-cycle-interface": true,
      "use-output-property-decorator": true,
      "use-pipe-transform-interface": true,
      "variable-name": [
          true,
          "ban-keywords",
          "check-format"
      ],
      "whitespace": [
          true,
          "check-branch",
          "check-decl",
          "check-operator",
          "check-separator"
      ]
  },
  "rulesDirectory": [
      "node_modules/codelyzer"
  ]
}